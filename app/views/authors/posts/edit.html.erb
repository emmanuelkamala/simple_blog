<%= link_to 'Back', posts_path, class: 'btn btn-success mb-3' %>

<div class="row">
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Editing Post</h5>
        <%= render 'form', post: @post %>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <%= form_with(model: [@post, @paragraph]) do |form| %>
      <%= form.submit %>
    <% end %>
  </div>
</div>
