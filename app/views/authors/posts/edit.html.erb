
<div class="row">
  <div class="col-md-3">
    <%= link_to 'Back', posts_path, class: 'btn btn-success mb-3' %>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Editing Post</h5>
        <%= render 'form', post: @post %>
      </div>
    </div>
  </div>
  <div class="col-md-9">
   <div class="mb-3">
    <%= form_with(model: [@post, @paragraph]) do |form| %>
      <%= form.hidden_field :element_type, value: 'paragraph' %>
      <%= form.submit "Paragraph", class: 'btn btn-primary' %>
    <% end %>
   </div>
    
   <div class="card">
      <div class="card-body pt-5">
        <% @post.elements.each do |element| %>
          <% if element.persisted? %>
           <div class="mb-4">
            <%= form_with(model: [@post, element]) do |form| %>
              <%= form.rich_text_area :content %>
              <%= form.submit "Save", class: 'btn btn-primary mt-3' %>
            <% end %>
           </div> 
          <% end %>
        <% end %>
      </div>
   </div>
  </div>
</div>
